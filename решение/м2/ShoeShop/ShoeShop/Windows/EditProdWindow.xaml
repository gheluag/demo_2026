<Window
    x:Class="ShoeShop.Windows.EditProdWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ShoeShop.Converters"
    Title="Редактирование товара"
    Width="860"
    Height="770"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="550" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <ScrollViewer
    Grid.Row="1"
    Grid.RowSpan="2"
    Grid.Column="1"
    VerticalScrollBarVisibility="Auto">
            <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1">
                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Id" />
                <TextBox
                x:Name="IdTB"
                Margin="5"
                Background="#EEE"
                IsReadOnly="True" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Наименование" />
                <ComboBox
                x:Name="ProdNameCB"
                Margin="5"
                DisplayMemberPath="ProdName1"
                SelectedValuePath="IdProdName" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Категория" />
                <ComboBox
                x:Name="CategoryCB"
                Margin="5"
                DisplayMemberPath="CatName"
                SelectedValuePath="IdCat" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Описание" />
                <TextBox
                x:Name="DescTB"
                Width="500"
                Margin="5"
                TextWrapping="Wrap" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Производитель" />
                <ComboBox
                x:Name="ManufCB"
                Margin="5"
                DisplayMemberPath="ManufName"
                SelectedValuePath="IdManuf" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Поставщик" />
                <ComboBox
                x:Name="SupplierCB"
                Margin="5"
                DisplayMemberPath="SupName"
                SelectedValuePath="IdSup" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Цена" />
                <TextBox x:Name="PriceTB" Margin="5" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Единица измерения" />
                <TextBox x:Name="CouTB" Margin="5" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Количество на складе" />
                <TextBox x:Name="CountTB" Margin="5" />

                <TextBlock
                Margin="10,5"
                FontSize="20"
                Text="Действующая скидка" />
                <TextBox x:Name="SaleTB" Margin="5" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            HorizontalAlignment="Center">
            <Image
                x:Name="ProdImg"
                Width="300"
                Height="200"
                Margin="5"
                Stretch="Uniform" />
            <Button
                Margin="5"
                Click="ChangeImageBtn_Click"
                Content="Изменить изображение"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />
        </StackPanel>


        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button
                x:Name="SaveBtn"
                Margin="5"
                Click="SaveBtn_Click"
                Content="Сохранить"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />
            <Button
                x:Name="CancelBtn"
                Margin="5"
                Click="CancelBtn_Click"
                Content="Отмена"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />
        </StackPanel>
    </Grid>
</Window>
