<Window
    x:Class="ShoeShop.Windows.AddProdWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ShoeShop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShoeShop.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавление товара"
    Width="900"
    Height="750"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Margin="0,0,0,10" Header="Основная информация">
                    <StackPanel Margin="10">
                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Наименование" />
                        <ComboBox x:Name="ProdNameCB" Margin="0,0,0,10" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Категория" />
                        <ComboBox
                            x:Name="CategoryCB"
                            Margin="0,0,0,10"
                            DisplayMemberPath="CatName"
                            SelectedValuePath="IdCat" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Описание" />
                        <TextBox
                            x:Name="DescTB"
                            Height="100"
                            Margin="0,0,0,10"
                            AcceptsReturn="True"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Margin="0,0,0,10" Header="Дополнительно">
                    <StackPanel Margin="10">
                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Производитель" />
                        <ComboBox
                            x:Name="ManufCB"
                            Margin="0,0,0,10"
                            DisplayMemberPath="ManufName"
                            SelectedValuePath="IdManuf" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Поставщик" />
                        <ComboBox
                            x:Name="SupplierCB"
                            Margin="0,0,0,10"
                            DisplayMemberPath="SupName"
                            SelectedValuePath="IdSup" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Цена" />
                        <TextBox x:Name="PriceTB" Margin="0,0,0,10" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Единица измерения" />
                        <TextBox x:Name="CouTB" Margin="0,0,0,10" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Количество на складе" />
                        <TextBox x:Name="CountTB" Margin="0,0,0,10" />

                        <TextBlock
                            Margin="0,5"
                            FontSize="16"
                            Text="Скидка (%)" />
                        <TextBox x:Name="SaleTB" Margin="0,0,0,10" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <Border
                Width="300"
                Height="200"
                Margin="0,0,0,10"
                BorderBrush="Gray"
                BorderThickness="1">
                <Image x:Name="ProdImg" Stretch="Uniform" />
            </Border>

            <Button
                x:Name="ChangeImageBtn"
                Width="200"
                Margin="0,0,0,20"
                Click="ChangeImageBtn_Click"
                Content="Добавить изображение"
                Style="{StaticResource LoginBtn}" />


            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="SaveBtn"
                    Width="100"
                    Margin="5"
                    Click="SaveBtn_Click"
                    Content="Добавить"
                    Style="{StaticResource LoginBtn}" />
                <Button
                    x:Name="CancelBtn"
                    Width="100"
                    Margin="5"
                    Click="CancelBtn_Click"
                    Content="Отмена"
                    Style="{StaticResource LoginBtn}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
