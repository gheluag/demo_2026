<Window
    x:Class="ShoeShop.CatalogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ShoeShop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShoeShop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ООО &quot;Обувь&quot;"
    Width="860"
    Height="770"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <conv:CrossedPriceConverter x:Key="CrossedPriceConverter" />
        <conv:ImagePathConverter x:Key="ImagePathConverter" />
        <conv:SaleToBackgroundConverter x:Key="SaleToBackgroundConverter" />
        <conv:FinalPriceConverter x:Key="FinalPriceConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="header" Grid.Row="0" />


        <Border
            Grid.Row="0"
            Padding="10"
            Background="#7FFF00">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="UserNameTB"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontWeight="Bold" />

                <Button
                    x:Name="exBtn"
                    Grid.Row="1"
                    Width="100"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="exBtn_Click"
                    Content="Выход"
                    Cursor="Hand" />
            </Grid>
        </Border>

        <Grid
            x:Name="SortGrid"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <TextBox
                    x:Name="SearchTB"
                    Height="30"
                    BorderThickness="2"
                    TextChanged="SearchTB_TextChanged" />

                <TextBlock
                    x:Name="SearchPlaceholder"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Gray"
                    Text="Найти" />
            </Grid>

            <ComboBox
                x:Name="SupplierCB"
                Grid.Column="1"
                Height="30"
                Margin="5"
                VerticalAlignment="Center"
                DisplayMemberPath="SupName"
                SelectedValuePath="IdSup"
                SelectionChanged="SupplierCB_SelectionChanged" />

            <ComboBox
                x:Name="SortCB"
                Grid.Column="2"
                Margin="5"
                SelectionChanged="SortCB_SelectionChanged">
                <ComboBoxItem Content="Без сортировки" IsSelected="True" />
                <ComboBoxItem Content="По возрастанию" />
                <ComboBoxItem Content="По убыванию" />
            </ComboBox>

        </Grid>

        <Border
            Grid.Row="2"
            Margin="5"
            Style="{StaticResource BorderSt}">

            <ListBox
                x:Name="prodList"
                ItemsSource="{Binding Products}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">

                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="0,5" />

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Count}" Value="0">
                                <Setter Property="Background" Value="LightBlue" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="500" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Margin="5"
                                Style="{StaticResource BorderSt}">
                                <Image
                                    x:Name="prodImg"
                                    Width="150"
                                    Height="117"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Source="{Binding Image, Converter={StaticResource ImagePathConverter}}"
                                    Stretch="UniformToFill" />
                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="5"
                                BorderThickness="1"
                                Style="{StaticResource BorderSt}">

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontWeight="Bold">
                                        <Run Text="{Binding Cat.CatName}" />
                                        |<Run Text="{Binding ProdNameNavigation.ProdName1}" />
                                    </TextBlock>
                                    <TextBlock FontWeight="Bold" Text="Описание: " />
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        Text="{Binding Descrip}"
                                        TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding Manuf.ManufName, StringFormat='Производитель: {0}'}" />
                                    <TextBlock Text="{Binding Sup.SupName, StringFormat='Поставщик: {0}'}" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="{Binding Converter={StaticResource FinalPriceConverter}}" />
                                        <TextBlock
                                            Foreground="Red"
                                            Text="{Binding Price, StringFormat='{}{0:N0} ₽'}"
                                            TextDecorations="{Binding Sale, Converter={StaticResource CrossedPriceConverter}}" />

                                    </StackPanel>
                                    <TextBlock Text="Единица измерения: шт." />
                                    <TextBlock Text="{Binding Count, StringFormat='Количество на складе: {0}'}" />
                                </StackPanel>

                            </Border>

                            <Border
                                Grid.Column="2"
                                Height="135"
                                Background="{Binding Sale, Converter={StaticResource SaleToBackgroundConverter}}"
                                Style="{StaticResource BorderSt}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="{Binding Sale, StringFormat='-{0}%'}" />
                            </Border>
                        </Grid>

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Border>

        <Grid
            x:Name="AdminPanel"
            Grid.Row="3"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="AddProdBtn"
                Width="250"
                Height="40"
                Click="AddProdBtn_Click"
                Content="Добавить товар"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />

            <Button
                x:Name="EditProdBtn"
                Grid.Column="1"
                Width="250"
                Height="40"
                Click="EditProdBtn_Click"
                Content="Редактировать товар"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />

            <Button
                x:Name="DelProdBtn"
                Grid.Column="2"
                Width="250"
                Height="40"
                Click="DelProdBtn_Click"
                Content="Удалить товар"
                Cursor="Hand"
                Style="{StaticResource LoginBtn}" />

        </Grid>

    </Grid>
</Window>
